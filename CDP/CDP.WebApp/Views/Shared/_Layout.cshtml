@using CDP.WebApp
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        Carta de Porte
    </title>

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,800,800italic">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald:400,300,700">
    @Scripts.Render("~/Content/bower_components/jquery/dist/jquery.js")
    @Scripts.Render("~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js")
    @Scripts.Render("~/Content/bower_components/slimscroll/jquery.slimscroll.js")
    @Scripts.Render("~/Content/bower_components/select2/dist/js/select2.min.js")
    @Scripts.Render("~/Content/bower_components/jquery-icheck/icheck.min.js")
    @Scripts.Render("~/Content/bower_components/parsleyjs/dist/parsley.js")
    @Scripts.Render("~/Content/bower_components/bootstrap-3-timepicker/js/bootstrap-timepicker.js")
    @Scripts.Render("~/Content/bower_components/bootstrap-datepicker/js/bootstrap-datepicker.js")
    @Scripts.Render("~/Content/bower_components/bootstrap-jasny/js/fileinput.js")
    @Scripts.Render("~/Content/bower_components/jquery-simplecolorpicker/jquery.simplecolorpicker.js")
    @Scripts.Render("~/Content/bower_components/datatables/media/js/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.js")
    @Scripts.Render("~/Content/bower_components/datatables-helper/js/datatables-helper.js")
    @Scripts.Render("~/Content/global/js/mvpready-core.js")
    @Scripts.Render("~/Content/global/js/mvpready-helpers.js")
    @Scripts.Render("~/Scripts/mvpready-admin.js")
    @Scripts.Render("~/Content/global/js/demos/form-pickers.js")
    @Scripts.Render("~/Content/bower_components/select2/dist/js/i18n/es.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")

    @Styles.Render("~/Content/bower_components/fontawesome/css/font-awesome.min.css")
    @Styles.Render("~/Content/bower_components/bootstrap/dist/css/bootstrap.min.css")
    @Styles.Render("~/Content/bower_components/select2/dist/css/select2.min.css")
    @Styles.Render("~/Content/bower_components/select2-bootstrap-theme/dist/select2-bootstrap.min.css")
    @Styles.Render("~/Content/bower_components/jquery-icheck/skins/minimal/_all.css")
    @Styles.Render("~/Content/bower_components/bootstrap-3-timepicker/css/bootstrap-timepicker.css")
    @Styles.Render("~/Content/bower_components/bootstrap-datepicker/css/datepicker3.css")
    @Styles.Render("~/Content/bower_components/bootstrap-jasny/dist/css/jasny-bootstrap.css")
    @Styles.Render("~/Content/bower_components/jquery-simplecolorpicker/jquery.simplecolorpicker.css")
    @Styles.Render("~/Content/css/mvpready-admin.css")

    <script type="text/javascript">
        $(function () {
            $(document).ready(function () {
                $.fn.select2.defaults.set('language', 'es');
            });
        });
    </script>
    @RenderSection("PageScripts", false)
</head>
<body class="layout-fixed  ">
    @RenderBody()
    <div id="wrapper">
        <div class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <div class="navbar-brand">
                        <a href="/Index/Chofer" class="logo">
                            <label class="control-label">Carta de Porte</label>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="sidebar">
            <div class="sidebar-bg"></div>
            <div class="sidebar-trigger sidebar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                <i class="fa fa-bars"></i>
            </div>
            <div class="sidebar-inner sidebar-collapse collapse">
                <ul class="sidebar-menu">
                    <li class="sidebar-header">
                        Menu
                    </li>
                    <li class="dropdown has_sub active open">
                        @if (Security.IsUserInRole("Administracion"))
                        {
                            <a class="">
                                <i class="fa fa-edit"></i>Administración
                                <span class="">
                                    <i class="fa fa-angle-right pull-right"></i>
                                </span>
                            </a>
                            <ul class="list-unstyled" style="">
                                <li>
                                    <a href="Chofer.aspx">Chofer</a>
                                </li>
                            </ul>
                        }
                        <div class="clearfix"></div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <asp:ContentPlaceHolder ID="MainContent" runat="server">
    </asp:ContentPlaceHolder>
</body>
</html>
